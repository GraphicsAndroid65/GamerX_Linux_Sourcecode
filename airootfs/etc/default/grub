# General settings
GRUB_DEFAULT=0
GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="GamerX OS"
GRUB_CMDLINE_LINUX_DEFAULT="loglevel=3 quiet"
GRUB_CMDLINE_LINUX=""

# Enable GRUB background
GRUB_BACKGROUND="/boot/grub/themes/archlinux/background.png"

# Enable graphical terminal
GRUB_TERMINAL_OUTPUT="gfxterm"

# GRUB theme settings (if applicable)
GRUB_THEME="/boot/grub/themes/archlinux/theme.txt"

# Use UUID for root filesystem
GRUB_DISABLE_LINUX_UUID=false

# Disable recovery entries
GRUB_DISABLE_RECOVERY=true

